//smooth
pfunction=30;//[10:2:70]
//Render pot and/or lid
dopot="yes";//["yes","no"]
dolid="yes";//["yes","no"]
//scale (approx diam) mm
pscale=60;//[10:0.5:300]
//leg top and bottom radii
leg_rad_top=24;//[8:0.5:30]
leg_rad_bot=10;//[6:0.5:14]
//hidden
$fn=pfunction;

